#include <iostream>//ikilik kod
#include <string>
using namespace std;

int main() {
    int a, b;
    string x = "";
    cout << "Eded daxil edin: ";
    cin >> a;
    while(a != 0){
    b = a % 2;
    a = a / 2;
    x = char(b + '0') + x;//qaliqlari tersine yazir
    }
    cout << x;
    return 0;
}

#include <iostream>//Massivin azalma sirasi
using namespace std;

void arr(int n){
    int a[n];
    cout <<"a[1] = ";
    cin >> a[0];
    for (int i = 1; i < n; i++){
        cout << "a[" << i + 1 << "] = ";
        cin >> a[i];
    }
        for(int i = 0; i < n - 1; i++){
            for(int j = i + 1; j < n; j++){
                if(a[i] < a[j]){
                    int num = a[i];
                     a[i] = a[j];
                     a[j] = num;
                }
            }
        }
        cout << "Azalan sira: " << "[";
        for(int i = 0; i < n; i++){
            cout << a[i] << " ";
        }
        cout << "]";
}

int main() {
    int size;
    cout << "Size: ";
    cin >> size;
    arr(size);
    
    return 0;
}

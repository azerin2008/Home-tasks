#include <iostream>//Funksiya ile 3 ededin ededi ortasi
using namespace std;

double average (double a, double b, double c){
    return (a + b + c) / 3;
}

int main() {
   double x = 0, y = 0, z = 0;
   cout << "3 eded daxil edin: " << endl;
   cin >> x >> y >> z;
   double d = average(x, y, z);
   cout << "Ededi orta: " << d;
   
    return 0;
}

#include <iostream>//massivdeki cut ededlerin cemi
using namespace std;

int main() {
    int i, s = 0, n;
    int a[] = {1, 2, 3, 4, 5, 6};
    n = sizeof(a) / 4;
    for (i = 0; i <= n; i++){
        if (a[i] % 2 == 0){
            s = s + a[i];
        }
    }
    cout << "s = " << s;
    return 0;
}

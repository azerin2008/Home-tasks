#include <iostream>//elementlerin kvadratlari cemi
#include <cmath>
using namespace std;

int main() {
    int a[] = {1, 2, 3};
    int n, c, b;
    n = sizeof(a) / sizeof(a[0]);
    for(int i = 0; i < n; i++){
        b = pow(a[i], 2);
        c = c + b;
        cout << b;
        if(i < n - 1){
            cout << " + ";
        }
    }
    cout << " = " << c;
    return 0;
}

#include <iostream>//min ve max elementlerin ededi ve hendeesi ortasi
#include <cmath>
using namespace std;

void arr(int n){
    int a[n];
    int max = a[0];
    int min = a[0];
    cout <<"a[1] = ";
    cin >> a[0];
    for (int i = 1; i < n; i++){
        cout << "a[" << i + 1 << "] = ";
        cin >> a[i];
    }
    for (int i = 0; i < n; i++){
        if(a[i] > max){
            max = a[i];
        }
        if(a[i] < min){
            min = a[i];
        }
    }
    double s = (min + max) / 2;
    double h = sqrt(min * max);
    cout << "Ededi orta: " << s << endl;
    cout << "Hendesi orta: " << h;
}

int main() {
    int n = 25;
    arr(n);
    return 0;
}

#include <iostream> //Funksiya ile ededin reqemleri cemi
using namespace std;

int reqemCemi (int a){
    int b = 0;
    int cem = 0;
    while(a > 0){
    b = a % 10;
    cem = cem + b;
    a = a / 10;
    }
    return cem;
}

int main() {
    int eded;
    cout << "Eded daxil edin: ";
    cin >> eded;
    int netice = reqemCemi(eded);
    cout << "Ededin reqemleri cemi: " << netice;
    return 0;
}

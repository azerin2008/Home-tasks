#include <iostream>//ardicil elementlerin ferqinden ibaret array
using namespace std;

int main() {
    int s, b = 0, n;
    int a [] = {5, 2, 9, 4};
    n = sizeof(a) / sizeof(a[0]);
    cout << "[";
    for(int i = 0; i < n - 1; i++){
        cout << a[i] << "-" << a[i + 1];
        if(i < n - 2){
            cout << ", ";
        }
    }
    cout << "]" << " = " << "[";
    for(int i = 0; i < n - 1; i++){
       b = a[i] - a[i + 1];
       cout << b;
        if(i < n - 2){
            cout << ", ";
        }
    }
    cout << "]";
    return 0;
}

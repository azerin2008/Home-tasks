#include <iostream>//Elementlerin modul ortalamasi
#include <cmath>
using namespace std;

int main() {
   int a[] = {1, -2, 3, -4};
   int n;
   double b = 0, c;
   n = sizeof(a) / sizeof(a[0]);
   for(int i = 0; i < n; i++){
       b = b + abs(a[i]);
   }
   c = b / n;
   cout << c;
    return 0;
}

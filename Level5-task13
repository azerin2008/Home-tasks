#include <iostream>//elementlerin modullari cemi
using namespace std;

int main() {
    int s = 0;
    int a [] = {1, -2, 3, -4};
    int n = sizeof(a) / 4;
    for(int i = 0; i < n; i++){
        s = s + abs(a[i]);
    cout << "|" << a[i] << "|";
    if(i < 3){
    cout << " + ";
    }
    }
    cout << " = " << s;
    return 0;
}

#include <iostream>//Max ve min elementin indeksi
using namespace std;

int main() {
   int a[] = {3, 7, 1, 9, 5};
   int n, b, m, c, k;
   b = a[0];
   n = sizeof(a) / sizeof(a[0]);
   cout << "Max index: ";
   for(int i = 0; i < n; i++){
       if(b > a[i]){
           b = a[i];
           m = i;
       }
   }
   cout << m << endl;
   cout << "Min index: ";
   for(int i = 0; i < n; i++){
       if(c < a[i]){
           c = a[i];
           k = i;
       }
   }
   cout << k << endl;
    return 0;
}

#include <iostream>//[1;n] parcasindaki cut ededlerin kvadratlari cemi
#include <cmath>
using namespace std;

int main() {
    int n, s, i;
    cout << "n = ";
    cin >> n;
    for(i = 2; i <= n; i = i + 2){
        s = s + (pow(i, 2));
        if(i == (n - 1) | i == n){
        cout << i << "^2";
        }
        else{
            cout << i << "^2" << " + ";
        }
    }
    cout << " = " << s;
    return 0;
}

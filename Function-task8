#include <iostream>//Funksiya ile [1;n] parcasindaki cut ededlerin kvadratlari cemi
#include <cmath>
using namespace std;

int cem (int n){
    int i, s = 0;
    for(i = 2; i <= n; i = i + 2){
        s = s + (pow(i, 2));
        if(i == (n - 1) | i == n){
        cout << i << "^2";
        }
        else{
            cout << i << "^2" << " + ";
        }
    }
    cout << " = ";
    return s;
}

int main() {
    int eded;
    cout << "Eded daxil edin: ";
    cin >> eded;
    int netice = cem (eded);
    cout << netice;
    return 0;
}

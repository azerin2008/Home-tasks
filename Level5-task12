#include <iostream>//max - min
using namespace std;

int main() {
    int a [] = {3, 7, 1, 9, 5};
    int n = sizeof(a) / 4;
    int b = a[0];
    int c = a[0];
    for(int i = 0; i < n; i++){
         if(b < a[i]){
             b = a[i];
         }
         if(c > a[i]){
             c = a[i];
         }
    }
    cout << b << " - " << c << " = " << b - c;
    return 0;
}

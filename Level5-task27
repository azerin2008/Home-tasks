#include <iostream>//Ilk ve ikinci yarinin cemi
using namespace std;

int main() {
    int a[] = {1, 2, 3, 4};
    int n = 0, s = 0, t = 0;
    n = sizeof(a) / sizeof(a[0]);
    cout << "Ilk yari: ";
    for(int i = 0; i < n / 2; i++){
        s = s + a[i];
    }
    cout << s;
    cout << endl;
    cout << "Ikinci yari: ";
    for(int j = (n / 2); j < n; j++){
        t = t + a[j];
    }
        cout << t;
    return 0;
}

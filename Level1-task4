#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double r;
    double p = M_PI;
    double s;
    double l;
    cout << "Radius daxil edin: ";
    cin >> r;
    if(r > 0){
    s = p * r * r;
    cout << "Dairenin sahesi = ";
    cout << s << endl;
    l = 2 * p * r;
    cout << "Cevrenin uzunlugu = ";
    cout << l;
}
else
cout << "Duzgun radius daxil edin!";
    return 0;
}

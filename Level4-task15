#include <iostream>//0 daxil edilene qederki ededlerin en boyuyu
using namespace std;

int main() {
    int x, y;
    cout << "Eded daxil edin: ";
    cin >> x;
    y = x;
    while(x != 0){
        cout << "Eded daxil edin: ";
        cin >> x;
        if(x > y){
          y = x;
        }
    }
    cout << "Max = " << y;
    return 0;
}
